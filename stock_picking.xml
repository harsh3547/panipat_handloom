<openerp>
	<data>
		<record id="panipat_stock_picking_inherit" model="ir.ui.view">
			<field name="name">panipat_stock_picking_inherit</field>
			<field name="model">stock.picking</field>
			<field name="inherit_id" ref="stock.view_picking_form" />
			<field name="arch" type="xml">
				<xpath expr="//field[@name='priority']" position="after">
					<field name="installation_job" invisible="1"/>
				</xpath>
				<xpath expr="//button[@name='do_unreserve']" position="after">
					<button name="button_install_job" string="Make Install Job" type="object" class="oe_highlight" 
					attrs="{'invisible': ['|',('installation_job', '!=', False),('state','in',('draft','cancel'))]}" />
					<button name="view_install_job" string="View Install Job" type="object" class="oe_highlight" 
					attrs="{'invisible': ['|',('installation_job', '=', False),('state','in',('draft','cancel'))]}" />
				</xpath>
			</field>
		</record>
	</data>
</openerp>